{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "indent": ["error", 2],
      "no-multi-spaces": ["error"],
      "no-useless-constructor":"off",
      "no-unused-vars":"warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.spec.ts",
          "**/*.e2e-spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ]
}
